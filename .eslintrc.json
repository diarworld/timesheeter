{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "@evrone-erp/eslint-config",
    "plugin:storybook/recommended"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-param-reassign": 0,
    "react/jsx-no-useless-fragment": [
      "error",
      {
        "allowExpressions": true
      }
    ]
  }
}